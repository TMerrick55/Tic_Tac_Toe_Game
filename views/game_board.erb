Welcome to Tic-Tac-Toe!

<p>It's <%=active_player%>'s turn!</p>

<form action= '/user_choice' method= 'post'>

<table>
	<tr>
		<td><%=board.ttt_board[0]%></td>
		<td><%=board.ttt_board[1]%></td>
		<td><%=board.ttt_board[2]%></td>
	</tr>
	<tr>
		<td><%=board.ttt_board[3]%></td>
		<td><%=board.ttt_board[4]%></td>
		<td><%=board.ttt_board[5]%></td>
	</tr>
	<tr>
		<td><%=board.ttt_board[6]%></td>
		<td><%=board.ttt_board[7]%></td>
		<td><%=board.ttt_board[8]%></td>
	</tr>
</table>

<p><select name= "square_spot">

	<%if board.ttt_board[0] == "" %>
		<option value= "0">0</option>
	<%end%>

	<%if board.ttt_board[1] == "" %>
		<option value= "1">1</option>
	<%end%>		

	<%if board.ttt_board[2] == "" %>
		<option value= "2">2</option>
	<%end%>

	<%if board.ttt_board[3] == "" %>
		<option value= "3">3</option>
	<%end%>

	<%if board.ttt_board[4] == "" %>
		<option value= "4">4</option>
	<%end%>
	
	<%if board.ttt_board[5] == "" %>
		<option value= "5">5</option>
	<%end%>	

	<%if board.ttt_board[6] == "" %>
		<option value= "6">6</option>
	<%end%>
	
	<%if board.ttt_board[7] == "" %>
		<option value= "7">7</option>
	<%end%>
	
	<%if board.ttt_board[8] == "" %>
		<option value= "8">8</option>
	<%end%>

</select></p>

<p><input type= 'submit'></p>

</form>